{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es2017",
    "lib": [
      "es2017",
      "es2019"
    ],
    "types": [
      "node"
    ],
    "noImplicitAny": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "output",
    "baseUrl": ".",
    "paths": {
      "@household/moneywallet-importer/*": [
        "src/*"
      ],
      "@household/shared/*": [
        "../../shared/src/*"
      ]
    }
  },
  "include": [
    "src"
  ]
}