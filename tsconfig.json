{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "target": "es2017",
    "lib": [
      "es2017",
      "es2019"
    ],
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "output",
    "baseUrl": ".",
    "paths": {
      "@household/api/*": [
        "api/src/*"
      ],
      "@household/shared/*": [
        "shared/src/*"
      ]
    }
  },
  "include": [
    "api/src",
    "shared/src"
  ]
}