{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "es2017",
    "lib": [
      "es2017",
      "es2019",
      "ES2023.Array",
    ],
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "output",
    "baseUrl": ".",
    "paths": {
      "@household/api/*": [
        "api/src/*"
      ],
      "@household/shared/*": [
        "shared/src/*"
      ]
    }
  },
  "exclude": [
    "api/**/*.spec.ts",
    "shared/**/*.spec.ts"
  ],
  "include": [
    "api/src",
    "shared/src",
    "localhost"
  ]
}