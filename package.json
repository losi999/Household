{
  "name": "household",
  "version": "1.0.0",
  "scripts": {
    "samconfig": "cp samconfig.${ENV}.toml samconfig.toml",
    "deploy:api:LOCAL": "export ENV=LOCAL && yarn samconfig && sam deploy -t cf.household.yaml --profile losonczil",
    "deploy:api:CI": "export ENV=CI && yarn samconfig && sam deploy -t cf.household.yaml --profile ci",
    "start:account": "sam local start-api -t sam.account.yaml -p 3000 -n env.json",
    "start:category": "sam local start-api -t sam.category.yaml -p 3001 -n env.json",
    "start:project": "sam local start-api -t sam.project.yaml -p 3002 -n env.json",
    "start:recipient": "sam local start-api -t sam.recipient.yaml -p 3003 -n env.json",
    "start:transaction": "sam local start-api -t sam.transaction.yaml -p 3004 -n env.json",
    "start": "concurrently 'yarn start:account' 'yarn start:category' 'yarn start:project' 'yarn start:recipient' 'yarn start:transaction'",
    "build:api": "rimraf ./dist/api && webpack",
    "build:api:watch": "export ENV=localhost && yarn build:api --watch",
    "build:web": "rimraf ./dist/web && cd web && yarn build",
    "build:web:LOCAL": "yarn build:web -c LOCAL",
    "deploy:web:LOCAL": "export ENV=LOCAL && aws s3 sync dist/web s3://$(aws cloudformation describe-stacks --stack-name Household-${ENV} --query \"Stacks[0].Outputs[?OutputKey=='WebsiteBucket'].OutputValue\" --output text --profile losonczil) --profile losonczil"
  },
  "devDependencies": {
    "@types/aws-lambda": "8.10.71",
    "@types/jest": "26.0.20",
    "@types/json-schema": "7.0.7",
    "@types/node": "14.14.25",
    "@types/uuid": "8.0.0",
    "@typescript-eslint/eslint-plugin": "4.14.2",
    "@typescript-eslint/parser": "4.14.2",
    "ajv": "6.12.6",
    "aws-sdk": "2.838.0",
    "concurrently": "^7.0.0",
    "eslint": "7.19.0",
    "jest": "26.6.3",
    "jest-date-mock": "1.0.8",
    "jest-dot-reporter": "1.0.14",
    "mongoose": "6.2.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.0",
    "ts-loader": "8.0.15",
    "typescript": "4.1.3",
    "uuid": "8.1.0",
    "webpack": "5.20.2",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "4.5.0",
    "webpack-glob-entry": "2.1.1"
  }
}
